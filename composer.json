{
	"name": "hamworks/project-name",
	"description": "",
	"license": "GPL-2.0-or-later",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
	"require": {
		"php": ">=8.0",
		"hamworks/wp-post-type": "^0.3.1",
		"hamworks/wp-taxonomy": "^0.6.1"
	},
	"require-dev": {
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"wp-coding-standards/wpcs": "^3.0",
		"sirbrillig/phpcs-variable-analysis": "^2.11",
		"squizlabs/php_codesniffer": "^3.7",
		"wpackagist-plugin/create-block-theme": "2.7.0",
		"wpackagist-plugin/safe-svg": "dev-trunk",
		"wpackagist-plugin/wordpress-importer": "dev-trunk",
		"wpackagist-plugin/advanced-query-loop": "dev-trunk",
		"wpackagist-plugin/wordpress-seo": "dev-trunk"
	},
	"extra": {
		"installer-paths": {
			"./wp-content/mu-plugins/{$name}": [
				"type:wordpress-muplugin"
			],
			"./wp-content/plugins/{$name}": [
				"type:wordpress-plugin"
			],
			"./wp-content/themes/{$name}": [
				"type:wordpress-theme"
			]
		}
	},
	"scripts": {
		"format": "phpcbf --standard=./phpcs.xml.dist --report-summary --report-source",
		"lint": "phpcs --standard=./phpcs.xml.dist",
		"phpcs": "phpcs --standard=./phpcs.xml.dist"
	},
	"config": {
		"vendor-dir": "./wp-content/mu-plugins/vendor",
		"bin-dir": "./vendor/bin",
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"composer/installers": true
		}
	}
}

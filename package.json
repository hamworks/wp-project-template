{
	"private": true,
	"version": "1.0.0",
	"workspaces": [
		"wp-content/themes/project-name"
	],
	"scripts": {
		"wp-now": "cd ./wp-content && npx @wp-playground/cli@latest server --auto-mount",
		"wp-env": "wp-env",
		"dev": "run-p dev:*",
		"dev:theme": "npm run dev -w ./wp-content/themes/project-name",
		"build": "npm run build --workspaces",
		"format": "wp-scripts format",
		"lint-css": "wp-scripts lint-style",
		"lint-css:fix": "wp-scripts lint-style --fix",
		"lint-js": "wp-scripts lint-js",
		"lint-js:fix": "wp-scripts lint-js --fix",
		"lint-php": "composer lint",
		"lint-php:fix": "composer format",
		"packages-update": "wp-scripts packages-update",
		"prepare": "husky"
	},
	"author": "HAMWORKS Co., Ltd.",
	"license": "GPL-2.0-or-later",
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@wordpress/env": "^10.26.0",
		"@wordpress/prettier-config": "^4.26.0",
		"@wordpress/scripts": "^30.19.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "npm:wp-prettier@^3.0.3"
	},
	"lint-staged": {
		"*.{js,json,ts,tsx}": [
			"npm run lint-js:fix",
			"npm run format"
		],
		"{*.css,*.scss}": [
			"npm run lint-css:fix"
		],
		"*.php": [
			"composer format",
			"npm run lint-php"
		]
	}
}
